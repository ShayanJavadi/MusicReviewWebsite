{% extends 'templates/app.twig' %}

{% block content %}
  <div class="container" id="reviews">
    <div class="row content">
      <div class="col-md-4">
        <img src="{{ base_url() }}/{{Album.album_art }}" alt="" height="300"/>
      </div>

      {% if auth.isLoggedIn %}
        <a href="{{ path_for('updateReview')}}?artist={{ Artist.artist_name }}&album={{ Album.album_name }}"><button type="button" name="button" class="btn btn-info btn-lg">Update review</button></a>
        <a href="{{ path_for('deleteReview')}}?artist={{ Artist.artist_name }}&album={{ Album.album_name }}"><button type="button" name="button" class="btn btn-danger btn-lg">Delete review</button></a>

      {% endif %}
      <div class="col-md-4">
          <h1><strong><a class="artistLink"href="artist?artist={{ Artist.artist_name}}">{{ Artist.artist_name}}</a></strong> - {{ Album.album_name|capitalize }}</h1>
          <h2></h2>
          <br>
          <h4> <strong>Rating:</strong> {{ Album.rating }}/10</h4>
          <h4> <strong>Released:</strong> {{ Album.release_date }}</h4>
          <h4> <strong>Genre</strong>: {{ Album.genre }}</h4></h4>
      </div>
      <div class="col-md-4">
        <div class="ratingBox">
          <h1><strong>{{ Review.rating }}/10</strong></h1>
        </div>
      </div>
    </div>
    <div class="">
      <br>
    </div>
    <div class="row content">
      <div class="col-sm-8">
        <h1><strong>Review</strong></h1>
        <hr>
        <div class="">
            {% for paragraph in ReviewText  %}
              <p>{{ paragraph }}<p>
            {% endfor %}
        </div>
      </div>
      <div class="col-sm-4 spotifyIframe" id="spotifyIframe">
        <iframe src="{{ Review.spotify_iframe }}" width="300" height="400" frameborder="0" allowtransparency="true"></iframe>
      </div>
    </div>
  </div>
  <script src="{{ base_url() }}/js/spotifyIframe.js"></script>
{% endblock %}
